{# Page vierge pour les twig #}
{% extends "base.twig" %}

{% block style %}{% endblock %}

{% block description %}Ammende LSPD{% endblock %}

{% block key %}Amende{% endblock %}

{% block title %}- Amende{% endblock %}

{% block navigation %}
  <p><a href="/">Accueil</a></p>
  <p><a href="/Reglements">Règlements</a></p>
  <p><a href="/Candidature" target="_blank">Candidature</a></p>
{% endblock %}

{% block main %}
  <section class="contenu">
    <h1>Délit routier</h1>
    {% for delit in routier %}
      <p><stong>{{ delit.intitule }} : </strong>{{ delit.amende }} {{ _Devise }} - {{delit.temps_prison}} mois - {{delit.retrait}} point(s)</p>
    {% endfor %}
  </section>

  <section class="contenu">
    <h1>Délit léger</h1>
    {% for delit in leger %}
      <p><stong>{{ delit.intitule }} : </strong>{{ delit.amende }} {{ _Devise }} - {{delit.temps_prison}} mois</p>
    {% endfor %}
  </section>

  <section class="contenu">
    <h1>Délit moyen</h1>
    {% for delit in moyen %}
      <p><stong>{{ delit.intitule }} : </strong>{{ delit.amende }} {{ _Devise }} - {{delit.temps_prison}} mois</p>
    {% endfor %}
  </section>

  <section class="contenu">
    <h1>Délit grave</h1>
    {% for delit in grave %}
      <p><stong>{{ delit.intitule }} : </strong>{{ delit.amende }} {{ _Devise }} - {{delit.temps_prison}} mois</p>
    {% endfor %}
  </section>
{% endblock %}
